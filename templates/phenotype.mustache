<!DOCTYPE html>
<html>
<head>
    <title>Monarch Phenotype: {{label}} ({{id}})</title>
    {{#scripts}}
    <script type="text/javascript" src="{{url}}"></script>
    {{/scripts}}
    <script src="/js/tabs.js"></script>
    <script src="/js/stupidtable.min.js"></script>
    <script src="/js/tables.js"></script>
    {{#stylesheets}}
    <link rel="stylesheet" type="text/css" href="{{url}}"/>
    {{/stylesheets}}
    <link rel="stylesheet" type="text/css" href="/css/monarch-specific.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta charset="utf-8"/> 
</head>
<body>
    {{{includes.navbar}}}
    <div class="monarch-container">
        <div class="sidebar">
            <a href="/"><img src="/image/logo-sneak.png" width="100" class="img-rounded"/></a>
            <ul class="nav nav-list">
                <li class="nav-header">Find</li>
                    <li class="nav-item"><a href="/disease">Disease</a></li>
                    <li class="nav-item"><a href="/phenotype">Phenotype</a></li>
                    <li class="nav-item"><a href="/model">Model</a></li>
                <li id="navigation" class="nav-header">Navigate</li>
                    <li id="over" class="special nav-item"><a href="#overview">Overview</a></li>
                    {{#hasDiseases}}
                    <li id="dis" class="special nav-item"><a href="#disease">Disease</a></li>
                    {{/hasDiseases}}
                    {{#hasGenotypes}}
                    <li id="geno" class="special nav-item"><a href="#genotypes">Genotypes</a></li>
                    {{/hasGenotypes}}
            </ul>
        </div>
        <div class="content">
            <div class="wrapperforfooter">
            <div class="jumbotron">
                <div id="description">
                    {{#alerts}}
                    <div class="alert">
                      {{{.}}}
                    </div>
                    {{/alerts}}
                    <h1 class="downloadline">Phenotype: {{label}}</h1>
                    <a href="{{{download.json}}}" class="btn btn-info downloadline">JSON</a>
                    <p>
                    {{definition}}
                    <br/>
                    {{comments}}
                    </p>
                </div>
                <div id="categories">
                    <a href="#overview"><div id="initialtab" class="tab contenttab overtab">Overview</div></a>
                    <div class="tabcontainer">
                        <div class="tabhover">Placeholder text</div>
                        {{#hasDiseases}}
                            <a href="#disease"><div class="tab contenttab distab">Disease ({{diseaseNum}})</div></a>
                        {{/hasDiseases}}
                        {{^hasDiseases}}
                            <div class="tab greyed-out">Disease (0)</div>
                        {{/hasDiseases}}
                    </div>
                    <div class="tabcontainer">
                        <div class="tabhover">Placeholder text</div>
                        {{#hasGenotypes}}
                            <a href="#genotypes"><div class="tab contenttab genotab">Genotypes ({{genotypeNum}})</div></a>
                        {{/hasGenotypes}}
                        {{^hasGenotypes}}
                            <div class="tab greyed-out">Genotypes (0)</div>
                        {{/hasGenotypes}}
                    </div>
                </div>
            </div>
            <div id="complete-info">
                <div id="overview" class="first category">
                    <h3>IDs</h3>
                        <div class="ids">
                            <b>URI:</b> <a href="{{{url}}}">{{{url}}}</a>
                        </div>
                        {{#hasAka}}
                            <div class="ids">
                                <b>AKA:</b>
                                {{aka}}
                            </div>
                        {{/hasAka}}
                        {{#hasXrefs}}
                            <div class="ids">
                                <b>xref IDs:</b> {{{xrefs}}}
                            </div>
                        {{/hasXrefs}}
                    <h3>Classification</h3>
                    {{{includes.classificationComponent}}}
                </div>
                {{#hasDiseases}}
                <div id="disease" class="category">
                    <table class="{{css.table}}">
                    {{{diseaseTable}}}
                    </table>
                </div>
                {{/hasDiseases}}
                {{#hasGenotypes}}
                <div id="genotypes" class="category">
                    <a href="{{{base_url}}}/genotype_associations.json" class="btn btn-info">JSON</a>
                        <!-- <a href="{{{base_url}}}/genotype_associations.rdf" class="btn btn-info">RDF</a> -->
                        <!-- <a href="{{{base_url}}}/genotype_associations.nt" class="btn btn-info">n-triples</a> -->
                        <table class="{{css.table}}">
                        {{{genotypeTable}}}
                        </table>
                </div>
                {{/hasGenotypes}}
            </div>
            </div> <!-- closes wrapperforfooter -->
            {{{includes.footer}}}
        </div>
    </div>
</body>
</html>
