	  <!-- Testing a different way to complete the form. -SJC -->
	  <hr />
	  <div>
            <form role="form"
	       action="/analyze/{{datatype}}/"
	       method="GET">
	      <div class="form-group">
		<label for="analyze_auto_target">Searchables</label>
		<textarea id="analyze_auto_target" type="text"
		       name="input_terms" class="form-control"
		       placeholder="Your terms will go here..."></textarea>
	      </div>
	      <div class="form-group">
		<label for="analyze_auto_input">Add to searchables</label>
		<input id="analyze_auto_input" type="text" class="form-control"
		       placeholder="Search for things...">
	      </div>
              <div class="form-group">
		<label for="analyze_limit_input">Number of results</label>
		<input id="analyze_limit_input" name="limit" type="text"
		        class="form-control" value="{{limit}}"></input>
	      </div>	      
              <button type="submit" class="btn btn-primary">Analyze!</button>  
            </form>
	  </div>
	  <hr />

	  <a href="{{{base_url}}}.json" class="btn btn-success">JSON</a>
          <h3>Results</h3>
          <table class="{{css.table}}">
