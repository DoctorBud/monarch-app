	      <dt>
		<a href="{{link}}">{{title}}</a>
		{{#category}}
		<a href="{{link}}" class="label label-default">{{label}}</a>
		{{/category}}
	      </dt>
	      <dd>
		<strong>{{moddate}}</strong>
