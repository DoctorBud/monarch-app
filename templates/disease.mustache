<!DOCTYPE html>
<html>
<head>
    <title>Monarch Disease: {{label}} ({{id}})</title>
    {{#scripts}}
    <script type="text/javascript" src="{{url}}"></script>
    {{/scripts}}
    <script type="text/javascript" src="/widgets/modeltype/js/modeltype.js"></script>
    <script type="text/javascript" src="/js/diseasepage.js"></script>
    <script src="/js/tabs.js"></script>
    <script src="/js/stupidtable.min.js"></script>
    <script src="/js/tables.js"></script>
    {{#stylesheets}}
    <link rel="stylesheet" type="text/css" href="{{url}}"/>
    {{/stylesheets}}
    <link rel="stylesheet" type="text/css" href="/css/monarch-specific.css"/>
    <link rel="stylesheet" type="text/css" href="/css/imagehover.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta charset="utf-8"/>
</head>
<body>
    {{{includes.navbar}}}
    <div class="monarch-container">
        <div class="sidebar">
            <a href="/"><img src="/image/logo-sneak.png" width="100" class="img-rounded"/></a>
            <ul class="nav nav-list">
                <li class="nav-header">Find</li>
                <li class="nav-item"><a href="/disease">Disease</a></li>
                <li class="nav-item"><a href="/phenotype">Phenotype</a></li>
                <li class="nav-item"><a href="/model">Model</a></li>
                <li id="navigation" class="nav-header">Navigate</li>
                <li id="ont" class="special nav-item"><a href="#ontology">Overview</a></li>
                {{#hasPhenotypes}}
                <li id="phen" class="special nav-item"><a href="#phenotypes">Phenotypes</a></li>
                {{/hasPhenotypes}}
                {{#hasGenes}}
                <li id="gen" class="special nav-item"><a href="#genes">Genes</a></li>
                {{/hasGenes}}
                {{#hasAlleles}}
                <li id="alle" class="special nav-item"><a href="#alleles">Alleles</a></li>
                {{/hasAlleles}}
                {{#hasModels}}
                <li id="mod" class="special nav-item"><a href="#model">Models</a></li>
                {{/hasModels}}
                {{#hasSim}}
                <li id="simi" class="special nav-item"><a href="#similarity">Related Diseases</a></li>
                {{/hasSim}}
                {{#hasPathways}}
                <li id="path" class="special nav-item"><a href="#pathways">Pathways</a></li>
                {{/hasPathways}}
            </ul>
        </div>
        <div class="content">
            <div class="wrapperforfooter">
            <div class="jumbotron">
                <div id="description">
                    {{#alerts}}
                    <div class="alert">
                        {{{.}}}
                    </div>
                    {{/alerts}}
                    <h1 class="downloadline">Disease: {{label}}</h1>
                    <a href="{{{base_url}}}.json" class="btn btn-info downloadline">JSON</a>
                    <!-- <a href="{{{base_url}}}.rdf" class="btn btn-success">RDF</a> -->
                    <!--                                 <a href="{{{base_url}}}.nt" class="btn btn-info">n-triples</a> -->
                    <p>
                        {{definition}}
                        <br/>
                        {{comments}}
						<br />
						Source: {{{primary_xref}}}
                    </p>
                </div>
                <div id="categories">
                    <div class="tabcontainer">
                        <a href="#ontology"><div id="initialtab" class="tab contenttab onttab">Overview</div></a>
                    </div>
                    <div class="tabcontainer">
                        <div class="tabhover">View phenotypes related to this disease</div>
                        {{#hasPhenotypes}}
                            <a href="#phenotypes"><div class="tab contenttab phentab">Phenotypes ({{phenotypeNum}})</div></a>
                        {{/hasPhenotypes}}
                        {{^hasPhenotypes}}
                            <div class="tab greyed-out">Phenotypes (0)</div>
                        {{/hasPhenotypes}}
                        </div>
                    <div class="tabcontainer">
                        <div class="tabhover">View genes known to be variant in this disease</div>
                        {{#hasGenes}}
                            <a href="#genes"><div class="tab contenttab gentab">Genes ({{geneNum}})</div></a>
                        {{/hasGenes}}
                        {{^hasGenes}}
                            <div class="tab greyed-out">Genes (0)</div>
                        {{/hasGenes}}
                    </div>
                    <div class="tabcontainer">
                        <div class="tabhover">View known variants associated with this disease</div>
                        {{#hasAlleles}}
                            <a href="#alleles"><div class="tab contenttab alletab">Alleles ({{alleleNum}})</div></a>
                        {{/hasAlleles}}
                        {{^hasAlleles}}
                            <div class="tab greyed-out">Alleles (0)</div>
                        {{/hasAlleles}}
                    </div>
                    <div class="second-row-divider"></div>
                    <div class="tabcontainer">
                        <div class="tabhover">View models that have phenotypes in common</div>
                        {{#hasModels}}
                            <a href="#model"><div class="tab contenttab modtab">Similar Models ({{modelNum}})</div></a>
                        {{/hasModels}}
                        {{^hasModels}}
                            <div class="tab greyed-out">Similar Models (0)</div>
                        {{/hasModels}}
                    </div>
                    <div class="tabcontainer">
                        <div class="tabhover">View diseases that have the most phenotypes in common</div>
                        {{#hasSim}}
                            <a href="#similarity"><div class="tab contenttab simitab">Related Diseases ({{simNum}})</div></a>
                        {{/hasSim}}
                        {{^hasSim}}
                            <div class="tab greyed-out">Related Diseases (0)</div>
                        {{/hasSim}}
                    </div>
                    <div class="tabcontainer">
                        <div class="tabhover">View phenotypes on pathway view containing variant genes</div>
                        {{#hasPathways}}
                            <a href="#pathways"><div class="tab contenttab pathtab">Pathways ({{pathwayNum}})</div></a>
                        {{/hasPathways}}
                        {{^hasPathways}}
                            <div class="tab greyed-out">Pathways (0)</div>
                        {{/hasPathways}}
                    </div>
                </div>
            </div>
            <div id="complete-info">
                <div id="ontology" class="first category">
                    {{#hasAka}}
                    <div class="ids">
                        <b>AKA:</b>
                        {{aka}}
                    </div>
                    {{/hasAka}}
                    {{#hasXrefs}}
                    <div class="ids">
						<b>xref IDs:</b> {{{xrefs}}}
                    </div>
                    {{/hasXrefs}}
                    <h3>Classification</h3>
                    {{{includes.classificationComponent}}}
                </div>
                {{#hasPhenotypes}}
                <div id="phenotypes" class="category">
                    <table class="{{css.table}}">
                        {{{phenotypeTable}}}
                    </table>
                </div>
                {{/hasPhenotypes}}
                {{#hasGenes}}
                <div id="genes" class="category">
                    {{^hasSubClasses}}
                    <table class="{{css.table}}">
                        {{{geneTable}}}
                    </table>
                    {{/hasSubClasses}}
                    {{#hasSubClasses}}
                    <p>
                        Genes are associated with specific subtypes of this
                        disease. Please select a disease subtype from the
                        list below to see the associated genes.
                        <!-- This will be fixed with issue 140 -->
                    </p>
                    <table class="{{css.table}}">
                        {{{subClassTable}}}
                    </table>
                    {{/hasSubClasses}}
                </div>
                {{/hasGenes}}
                {{#hasAlleles}}
                <div id="alleles" class="category">
                    <table class="{{css.table}}">
                        {{{alleleTable}}}
                    </table>
                </div>
                {{/hasAlleles}}
                {{#hasModels}}
                <div id="model" class="category">
                    <div id ="phen_vis"></div>
                </div>
                {{/hasModels}}
                {{#hasSim}}
                <div id="similarity" class="category">
                    <table class="{{css.table}}">
                        {{{simTable}}}
                    </table>
                </div>
                {{/hasSim}}
                {{#hasPathways}}
                <div id="pathways" class="category">
                    <table class="{{css.table}}">
                        {{{pathwayTable}}}
                    </table>
                    <div id="keggerator_div"></div>
                    <script>
                        // tell keggerator where to draw stuff and handle ui events
                        keggerator.setImageDiv($("#keggerator_div"));
                        keggerator.init();
                    </script>
                </div>
                {{/hasPathways}}
            </div>
            </div> <!-- closes wrapperforfooter -->
            {{{includes.footer}}}
        </div>
    </div>
</body>
</html>
