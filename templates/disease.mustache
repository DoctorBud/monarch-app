<!DOCTYPE html>
<html>
<head>
    <title>Monarch Disease: {{label}} ({{id}})</title>
    {{#scripts}}
    <script type="text/javascript" src="{{url}}"></script>
    {{/scripts}}
    <script type="text/javascript" src="/js/modeltype.js"></script>
    {{#stylesheets}}
    <link rel="stylesheet" type="text/css" href="{{url}}"></link>
    {{/stylesheets}}
    <link rel="stylesheet" type="text/css" href="../css/disease.css"></link>
    <link rel="stylesheet" type="text/css" href="../css/imagehover.css"></link>
    <script src="../js/tabs.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset=”utf-8”>
</head>
<body>
    {{{includes.navbar}}}
    <div class="container">
    <div class="sidebar">
        {{{includes.navlistdisease}}}
    </div>
    <div class="content">
        <div class="jumbotron">
            <div id="description">
                <h1 class="downloadline">Disease: {{label}}</h1>
                <a href="{{{base_url}}}.json" class="btn btn-info downloadline">JSON</a>
                <!-- <a href="{{{base_url}}}.rdf" class="btn btn-success">RDF</a> -->
<!--                 <a href="{{{base_url}}}.nt" class="btn btn-info">n-triples</a> -->
                <p>
                {{definition}}
                <br/>
                {{comments}}
                </p>
            </div>
            <div id="categories">
                <a href="#phenotypes"><div id="initialtab" class="tab phentab">Phenotypes</div></a>
                <a href="#ontology"><div class="tab onttab">Ontology</div></a>
                <a href="#genes"><div class="tab gentab">Genes</div></a>
                <a href="#alleles"><div class="tab alletab">Alleles</div></a>
                <div class="second-row-divider"></div>
                <a href="#model"><div class="tab modtab second">Model</div></a>
                <a href="#similarity"><div class="tab simtab">Similarity</div></a>
                <a href="#pathways"><div class="tab pathtab">Pathways</div></a>
            </div>
        </div>
        <div id="complete-info">
            <div id="phenotypes" class="first category">
                <h3 class="downloadline">Phenotypes</h3>
                <a href="{{{base_url}}}/phenotype_associations.json" class="btn btn-info downloadline">JSON</a>
                <!--    <a href="{{{base_url}}}/phenotype_associations.rdf" class="btn btn-success">RDF</a> -->
<!--                     <a href="{{{base_url}}}/phenotype_associations.nt" class="btn btn-info">n-triples</a> -->
                <table class="{{css.table}}">
                {{{phenotypeTable}}}
                </table>
            </div>
            <div id="ontology" class="category">
                <h3>IDs</h3>
                    <div class="ids">
                        <b>AKA: </b>
                        {{#has_exact_synonym}}
                        {{.}},
                        {{/has_exact_synonym}}
                    </div>
                    <div class="ids">
                        <b>IDs: </b>
                        {{#database_cross_reference}}
                        {{.}},
                        {{/database_cross_reference}}
                    </div>
                    <div class="superclasses">
                      <h4>Is a subtype of</h4>
                      <table class="{{css.table}}">
                        {{{superClassTable}}}
                      </table>
                    </div>
                    {{#hasEquivalentClasses}}
                    <div class="equivs">
                      <h4>Is equivalent to</h4>
                      <table class="{{css.table}}">
                        {{{equivalentClassTable}}}
                      </table>
                    </div>
                    {{/hasEquivalentClasses}}
                    <div class="subs">
                      <h4>Has subtype</h4>
                      <table class="{{css.table}}">
                        {{{subClassTable}}}
                      </table>
                    </div>
                    </p>
            </div>
            <div id="genes" class="category">
                <h3>Genes</h3>
                {{^hasSubClasses}}
                 <table class="{{css.table}}">
                  {{{geneTable}}}
                 </table>
                {{/hasSubClasses}}
                {{#hasSubClasses}}
                 <p>
                  Genes are associated with specific subtypes of this
                  disease. Please select a disease subtype from the
                  list below to see the associated genes.
                  <!-- This will be fixed with issue 140 -->
                 </p>
                 <table class="{{css.table}}">
                  {{{subClassTable}}}
                 </table>
                {{/hasSubClasses}}
            </div>
            <div id="alleles" class="category">
                <h3>Alleles</h3>
                <table class="{{css.table}}">
                {{{alleleTable}}}
                </table>
            </div>
            <div id="model" class="category">
                <h3 class="downloadline">Models</h3>
                <a href="{{{base_url}}}/models.json" class="btn btn-info downloadline">JSON</a>
                <!--    <a href="{{{base_url}}}/models.rdf" class="btn btn-success">RDF</a> -->
<!--                     <a href="{{{base_url}}}/models.nt" class="btn btn-info">n-triples</a> -->
                <table class="{{css.table}}">
                {{{modelTable}}}
		<div id ="phen_vis"></div>
                </table>
            </div>
            <div id="similarity" class="category">
                <h3 class="downloadline">Similar Diseases</h3>
                <a href="{{{base_url}}}/sim.json" class="btn btn-info downloadline">JSON</a>
                <table class="{{css.table}}">
                {{{simTable}}}
                </table>
            </div>
            <div id="pathways" class="category">
                <h3 class="downloadline">Disease Pathways</h3>
                <a href="{{{base_url}}}/pathway.json" class="btn btn-info downloadline">JSON</a>
                <table class="{{css.table}}">
                    {{{pathwayTable}}}
                </table>
            </div>
        </div>
        {{{includes.footer}}}
    </div>
</body>
</html>
