    <!-- Two-column layout, col. 2 -->
    <div id="col-1" class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
      <!-- Search. -->
      <div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Search</h3>
	  </div>
	  <div class="panel-body">
	    <p>
	      Seqrch for things.
	    </p>
	    <form id="search_form"
		  class="navbar-form"
		  action="/search"
		  role="search">
	      <div class="form-group">
		<input id="search"
		       type="text"
		       class="form-control"
		       placeholder="Search (e.g. Parkinson's)" />
		<br />
		<div class="radio">
		  <label>
		    <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" checked>
		    Option one
		  </label>
		</div>
		<br />
		<div class="radio">
		  <label>
		    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
		    Option two
		  </label>
		</div>
		<br />
		<div class="radio disabled">
		  <label>
		    <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3" disabled>
		    Option three
		  </label>
		</div>
		
	      </div>
	    </form>
	  </div>
	</div>
      </div>

      <!-- Explore. -->
      <div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Explore</h3>
	  </div>
	  <div class="panel-body">

	    <div class="list-group">
	      <a href="/disease" class="list-group-item list-group-item-success" style="color:#3c763d;background-color:#dff0d8">
		Mendelian diseases
	      </a>
	      <a href="/phenotype" class="list-group-item list-group-item-info" style="color:#31708f;background-color:#d9edf7">
		Phenotypes
	      </a>
	      <a href="/model" class="list-group-item list-group-item-warning" style="color:#8a6d3b;background-color:#fcf8e3">
		Models of Disease
	      </a>
	      <a href="/gene" class="list-group-item list-group-item-danger" style="color:#a94442;background-color:#f2dede">
		Understand the genetics
	      </a>
	    </div>

	  </div>
	</div>
      </div>

      <!-- Pheno Search. -->
      <div>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Pheno Search</h3>
	  </div>
	  <div class="panel-body">
	    <p>
	      Search phenotypes.
	    </p>
	    <input id="pheno-search"
		   type="text"
		   class="form-control"
		   placeholder="Search (e.g. Parkinson's)" />
	  </div>
	</div>
