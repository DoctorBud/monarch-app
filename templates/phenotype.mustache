<!DOCTYPE html>
<html>
<head>
    <title>Monarch Phenotype: {{label}} ({{id}})</title>
    {{#scripts}}
    <script type="text/javascript" src="{{url}}"></script>
    {{/scripts}}
    {{#stylesheets}}
    <link rel="stylesheet" type="text/css" href="{{url}}"></link>
    {{/stylesheets}}
    <link rel="stylesheet" type="text/css" href="../css/disease.css"></link>
    <script src="../js/tabs.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset=”utf-8”>
</head>
<body>
    {{{includes.navbar}}}
    <div class="container">
    <div class="sidebar">
        {{{includes.navlistphenotype}}}
    </div>
    <div class="content">
        <div class="jumbotron">
            <div id="description">
                <h1 class="downloadline">Phenotype: {{label}}</h1>
                <a href="{{{download.json}}}" class="btn btn-info downloadline">JSON</a>
                <p>
                {{definition}}
                <br/>
                {{comments}}
                </p>
            </div>
            <div id="categories">
                <a href="#overview"><div id="initialtab" class="tab overtab">Overview</div></a>
                <a href="#disease"><div class="tab distab">Disease</div></a>
                <a href="#genotypes"><div class="tab genotab">Genotypes</div></a>
                <a href="#similarity"><div class="tab simtab second">Similarity</div></a>
            </div>
        </div>
        <div id="complete-info">
            <div id="overview" class="first category">
                <h3>IDs</h3>
                    <div class="ids">
                        <b>URI:</b> <a href="{{{url}}}">{{{url}}}</a>
                    </div>
                    <div class="ids">
                        <b>AKA: </b>
                        {{#has_exact_synonym}}
                        {{.}},
                        {{/has_exact_synonym}}
                    </div>
                    <div class="ids">
                        <b>IDs: </b>
                        {{#database_cross_reference}}
                        {{.}},
                        {{/database_cross_reference}}
                    </div>
                <h3>Ontology</h3>
                    <p>
                    <table class="{{css.table}}">
                    {{{ontNavBox}}}
                    </table>
                    </p>
            </div>
            <div id="disease" class="category">
                <h3>Disease</h3>
                </span>
                <table class="{{css.table}}">
                {{{diseaseTable}}}
                </table>
            </div>
            <div id="genotypes" class="category">
                <h3 class="downloadline">Genotype Associations</h3>
                <a href="{{{base_url}}}/genotype_associations.json" class="btn btn-info downloadline">JSON</a>
<!--                 <a href="{{{base_url}}}/genotype_associations.rdf" class="btn btn-info">RDF</a> -->
<!--                 <a href="{{{base_url}}}/genotype_associations.nt" class="btn btn-info">n-triples</a> -->
                    <table class="{{css.table}}">
                    {{{genotypeTable}}}
                    </table>
            </div>
            <div id="similarity" class="category">
                <h3>Diseases Matched</h3>
                <table class="{{css.table}}">
                {{{simTable}}}
                </table>
            </div>
        </div>
        {{{includes.footer}}}
    </div>
</body>
</html>
